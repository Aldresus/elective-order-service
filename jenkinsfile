pipeline {
    agent any 

    environment {
        MONGODB_URI = credentials('ORDER_SERVICE_MONGODB_URI')
    }

    stages {
        stage('clear existing image and container') {
            steps {
                script {
                    try {
                        sh "docker kill order-service"
                        sh "docker rm order-service"
                        sh "docker rmi order-service"


                    } catch (Exception e) {
                        echo "No existing image or container to remove"
                    }
                }
            }
        }
        stage('build image') {
            steps {
                script {
                    // Start the application within the running container
                    sh "touch .env && echo DATABASE_URL=${MONGODB_URI} >> .env"
                    sh "docker build -t order-service ."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    sh "docker run -d --name order-service -p 9011:3000 --restart unless-stopped order-service"
                }
            }
        }
    } 
}

def dockerExec(command) {
    sh "docker exec ${CONTAINER_NAME} ${command}"
}